<launch>
  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
  <arg name="paused" default="false"/>
  <arg name="use_gazebo" default="false" />
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>
  <arg name="model" default="$(find mobile_robot_CCMDX1)/urdf/mr_CCMDX1.urdf"/>
  <arg name="rvizconfig" default="$(find mobile_robot_CCMDX1)/rviz/urdf.rviz" />

  <include file="$(find mobile_robot_CCMDX1)/launch/ccmdx1_gazebo.launch">
    <arg name="model" value="$(arg model)" />
  </include>


  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />


  <!--rosparam file="$(find mobile_robot_CCMDX1)/config/pid_param.yaml" command="load" /-->

<!--Load the joint controller configurations from YAML file to parameter server -->

  <rosparam command="load"
            file="$(find mobile_robot_CCMDX1)/config/joints.yaml"
            ns="r2d2_joint_state_controller" />
  <rosparam command="load"
            file="$(find mobile_robot_CCMDX1)/config/head.yaml"
            ns="r2d2_head_controller" />
  <rosparam command="load"
            file="$(find mobile_robot_CCMDX1)/config/diffdrive.yaml"
            ns="r2d2_diff_drive_controller" />

  <node name="r2d2_controller_spawner" pkg="controller_manager" type="spawner"
    args="r2d2_joint_state_controller
          r2d2_head_controller
          r2d2_diff_drive_controller
          --shutdown-timeout 3"/>

<!--Load the controllers -->

  <node pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" name="teleop">
    <remap from="cmd_vel" to="/r2d2_diff_drive_controller/cmd_vel"/>
  </node>

  <node name="slam_gmapping" pkg="gmapping" type="slam_gmapping">
    <remap from="/scan" to="/ccmdx1/laser/scan"/>
    <param name="hokuyo_link" value="base_frame"/>
    <param name="delta" value="0.1" />

     <rosparam>

      odom_frame: odom
      base_frame: base_link
      map_frame: map
      map_update_interval: 0.005 # Publish new map

      maxUrange: 10 # Should be just less than sensor range
      maxRange: 30 # Should be just greater than sensor range
      particles: 1 # Increased from 80

      # Update frequencies
      linearUpdate: 0.1
      angularUpdate: 0.174533
      temporalUpdate: 0.03
      resampleThreshold: 0.5

      # Initial Map Size
      xmin: -100.0
      ymin: -100.0
      xmax: 100.0
      ymax: 100.0
      delta: 0.05 # 0.05
      occ_treshold: 0.25

      # All default
      sigma: 0.05
      kernelSize: 1
      lstep: 0.05
      astep: 0.05
      iterations: 20 # 5
      lsigma: 0.075
      ogain: 3.0
      lskip: 0
      llsamplerange: 0.01
      llsamplestep: 0.01
      lasamplerange: 0.005
      lasamplestep: 0.005
     </rosparam>
  </node>

  <node pkg="tf" type="static_transform_publisher" name="laser_broadcaster" args="0 0 0.36 0 0 0 /base_link /laser/scan 100"/>

</launch>
